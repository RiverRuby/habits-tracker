// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id
  created     DateTime @default(now())
  phone       String?  // Phone number for daily calls
  callEnabled Boolean  @default(false) // Whether daily calls are enabled
  callTime    String?  // Preferred call time (e.g., "09:00")
  timezone    String?  @default("America/Los_Angeles")
  habits      Habit[]
  callLogs    CallLog[]
}

model Habit {
  id          String   @id
  name        String
  description String?  // Detailed description of the habit
  theme       String   @default("ORANGE")
  emoji       String?  // Custom emoji for the habit
  created     DateTime @default(now())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  completed   HabitCompletion[]

  @@index([userId])
}

model HabitCompletion {
  id        String   @id @default(cuid())
  day       String   // Format: "DD MMM YYYY"
  notes     String?  // Notes/details about this completion
  habitId   String
  habit     Habit    @relation(fields: [habitId], references: [id], onDelete: Cascade)

  @@unique([habitId, day])
  @@index([habitId])
  @@index([day])
}

model CallLog {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  startedAt   DateTime @default(now())
  endedAt     DateTime?
  duration    Int?     // Duration in seconds
  transcript  String?  // Full conversation transcript
  status      String   @default("initiated") // initiated, completed, failed
  telnyxCallId String? // Telnyx call control ID

  @@index([userId])
  @@index([startedAt])
} 